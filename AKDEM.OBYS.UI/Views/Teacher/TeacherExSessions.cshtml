@model List<AppSessionListDto>
@{
    Layout = "_Layout";
}

<div class="mt-2">
    <h1>DÖNEMLER</h1>
</div>
<hr />

@{if (Model.Count != 0)

    {

        <table class="mt-3 table table-sm table-hover">
            <thead>
                <tr>
                    <th>Dönem Adı</th>
                    <th>Durumu</th>

                    <th>Not</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>



                        @{

                            if (item.Status == true)
                            {
                                <td bgcolor="LightBlue"><a class="text-dark" asp-action="TeacherExSessionDetails" asp-controller="Teacher" asp-route-sessionId="@item.Id" asp-route-userId="@ViewBag.userId">@item.Definition</a></td>

                                <td class="text-bg-danger p-3">Düzenlenebilir</td>
                            }
                            else
                            {
                                <td bgcolor="DimGrey"><a asp-action="TeacherExSessionDetails" asp-controller="Teacher" asp-route-sessionId="@item.Id" asp-route-userId="@ViewBag.userId">@item.Definition</a></td>
                                <td class="text-bg-danger p-3">Geçmiş</td>
                            }
                        }



                        @{
                            if (!item.Status)
                            {


                                <td>Yalnızca Döneme Dair Veriler İncelenebilir</td>
                            }
                            else if (item.Status == true)
                            {

                                <td>Döneme Dair Veriler İncelenebilir ve Düzeltilebilir.</td>
                            }


                        }



                    </tr>
                }
            </tbody>

        </table>


    }
    else
    {
        <h5>Geçmiş Dönemler Arasında  Ders Programınızın Bulunduğu Herhangi Bir Dönem Bulunamadı</h5>
    }


}



