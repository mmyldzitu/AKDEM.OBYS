@model List<TeacherLessonsBranchedPreviewModel>
@{
    Layout = "_Layout";
}
<div class="container-fluid">
    @{ if (Model.Count != 0)
        {

            <div class="container-fluid">

                <div class="mt-2">
                    @{ if (ViewBag.sessionStatus2 == true)
                        {
                            <h1>(@ViewBag.sessionName)  DÖNEM DERSLERİ  <span style="font-weight: bold; color: cadetblue;">(AKTİF)</span> </h1>


                        }
                        else if (ViewBag.sessionStatus == false)
                        {
                            <h1> (@ViewBag.sessionName) DÖNEM DERSLERİ  <span style="font-weight: bold; color: red;">(PASİF)</span> </h1>

                        }
                        else
                        {
                            <h1>(@ViewBag.sessionName)  DÖNEM DERSLERİ  <span style="font-weight: bold; color: lightblue;">(DÜZENLENEBİLİR)</span> </h1>

                        }

                    }
                </div>
                <hr />
                <table class="mt-3 table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>SINIF</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td bgcolor="gray"><a asp-action="BranchNotes" asp-controller="Teacher" asp-route-sessionId="@ViewBag.sessionId" asp-route-branchId="@item.BranchId" asp-route-lessonId="@item.LessonId"> @item.LessonDefinition (@item.BranchDefinition)</a></td>
                                <td><strong>AKTİF DÖNEM İÇERİSİNDE NOT GÖRÜNTÜLENEBİLİR, NOT GİRİLEBİLİR, NOT GÜNCELLENEBİLİR</strong></td>
                            </tr>
                        }



                    </tbody>

                </table>

            </div>

        }
        else
        {
            <h5>Aktif Bir Dönem İçerisinde Bulunmamaktasınız veya Ders Programınız Henüz Oluşturulmadı</h5>
        }
    }
</div>




