
@model List<AppBranchListDto>
@{
}

<div class="mt-2">
    <h1>SINIFLAR</h1>
</div>



<table class="mt-3 table table-sm table-hover">
    <thead>
        <tr>
            <th>Şube Adı</th>
            <th>Sınıf</th>
            <th>İşlem</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Definition</td>


                <td>@item.AppClass.Definition</td>


            </tr>
        }
    </tbody>

</table>
@if ( ViewBag.ClassId != 6)
{
    <div id="Ekle" class="mb-3" style="display:block">
        <a asp-action="CreateBranch" asp-controller="Branch" asp-route-id="@ViewBag.ClassId" class="mt-2 btn btn-primary">Yeni Şube Ekle</a>

    </div>
}
