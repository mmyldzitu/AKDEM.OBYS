@model List<AppWarningListDto>
@{
    Layout = "_Layout";
    int count = 0;
}

<div class="mt-2">
    <div class="text-right">
        <a id="pdfButton" class="btn btn-success" asp-action="GenerateAndDownloadPdf4" asp-controller="Warning" asp-route-myFileName="@($"{ViewBag.userName}_{ViewBag.sessionName2} DÖNEMİ İHTARLARI")" asp-route-sessionId="@ViewBag.sessionId"  asp-route-userId="@ViewBag.userId">PDF</a>
    </div>
    <h1>@ViewBag.userName @ViewBag.sessionName DÖNEMİ İHTARLARI</h1>
</div>

<hr />
<table class="mt-3 table table-sm table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>İhtar Katkısı</th>
            <th>İhtar Sebebi</th>
            <th>İhtar Tarihi</th>

            @{if (ViewBag.sessionStatus)
                {
                    <th>İhtarı Sil</th>

                } }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count = count + 1;
        <tr>

            <td>@count</td>
            <td>@item.WarningCount</td>
            <td>@item.WarningReason</td>
            <td>@item.WarningTime</td>
            @{if (ViewBag.sessionStatus)
                {
                        <td><a class="btn btn-outline-danger" asp-action="RemoveWarning" asp-controller="Warning" asp-route-id="@item.Id" asp-route-sessionId="@ViewBag.sessionId" asp-route-userId="@ViewBag.userId">Sil</a></td>

                } }
            





        </tr>
        }
    </tbody>


</table>
<a class="btn btn-outline-success" asp-action="PassiveStudents" asp-controller="Warning" asp-route-sessionId="@ViewBag.sessionId">Listeye Dön</a>

