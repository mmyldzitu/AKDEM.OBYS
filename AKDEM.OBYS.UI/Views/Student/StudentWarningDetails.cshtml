@model StudentWarningsModel
@{
    Layout = "_Layout";
    int count = 0;
}
<div class="text-right">
    <a id="pdfButton" class="btn btn-success" asp-action="GenerateAndDownloadPdf3" asp-controller="Student" asp-route-myFileName="@ViewBag.headerforPdf" asp-route-sessionId="@ViewBag.sessionId" asp-route-userId="@ViewBag.userId">PDF</a>
</div>
<hr />
@{ if (!Model.Status)
    {

        <h5>
            <span style=" color: red;">@Model.DepartReason</span>
        </h5>

    }

}
<hr />
<div class="mt-2">
    <h1>(@ViewBag.sessionName) DÖNEMİ İHTARLARI</h1>
</div>




        <table class="mt-3 table table-sm table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>İhtar Katkısı</th>
                    <th>İhtar Sebebi</th>
                    <th>İhtar Tarihi</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AppWarnings)
                {
                    count = count + 1;
                    <tr>

                        <td>@count</td>
                        <td>@item.WarningCount</td>
                        <td>@item.WarningReason</td>
                        <td>@item.WarningTime</td>




                    </tr>
                }
            </tbody>


        </table>

    
   



