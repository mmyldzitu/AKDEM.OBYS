@model List<AppBranchListDto>
@{
    Layout = "_Layout";
}

<div class="mb-3">
    <label>Sınıflar :</label>
    <select onchange="setInputDisplay()"  asp-items="@ViewBag.classes" class="form-select"></select>
</div>


<div class="mt-2">
    <h1>SINIFLAR</h1>
</div>
<table class="mt-3 table table-sm table-hover">
    <thead>
        <tr>
            <th>Şube Adı</th>
            <th>Sınıf</th>
            <th>İşlem</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Definition</td>


                <td>@item.AppClass.Definition</td>
                
               
            </tr>
        }
    </tbody>

</table>
<a asp-action="CreateBranch" asp-controller="Branch" class="mt-2 btn btn-primary">Yeni Şube Ekle</a>
