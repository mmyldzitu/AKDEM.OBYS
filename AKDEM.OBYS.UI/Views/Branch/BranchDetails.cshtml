@model List<AppStudentListDto>
@{
    Layout = "_Layout";
    int count = 0;
}
<div class="container-fluid">
    <div class="text-end">
        <h1>SINIF ÖĞRENCİLERİ</h1>
    </div>
   
    <table class="mt-3 table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Sıra No</th>

                <th>Görsel</th>

                <th>Şube</th>
                <th>Şube Derecesi</th>
                <th>Sınıf Derecesi</th>
                <th>Dönem Ortalaması</th>
                <th>Genel Ortalama </th>




            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count = count + 1;
                <tr>
                    <td>@count</td>
                    <td>@item.FirstName</td>
                    <td>@item.SecondName</td>
                    <td>--</td>
                    <td><img src="@item.ImagePath" height="150" width="150" /></td>
                 
                    <td>@item.AppBranch.Definition</td>
                    <td>---</td>
                    <td>---</td>
                    <td>---</td>
                    <td>---</td>





                </tr>
            }
        </tbody>

    </table>

</div>

