@model MergeBranchModel
@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <form asp-action="MergeBranches" asp-controller="Branch" method="post" enctype="multipart/form-data" onsubmit="return confirmAndSubmit()">
        <input type="hidden" asp-for="ClassType" value="@ViewBag.classType" />

        <div class="row">
            <div class="col-md-3">
                <label>Taşımak İstediğiniz Sınıf:</label>

                <select asp-for="FirstBranchId" asp-items="@ViewBag.firstBranch" class="form form-control-sm">
                    <option value="0">Bir Sınıf Seçiniz</option>
                </select>
            </div>
            <div class="col-md-3">
                <label>Hedef Sınıf:</label>

                <select asp-for="SecondBranchId" asp-items="@ViewBag.secondBranch" class="form form-control-sm">
                    <option value="0">Bir Sınıf Seçiniz</option>
                </select>
            </div>

        </div>
        <br />

        <div class="mt-3">
            <button class="btn btn-success" type="submit">TAŞI</button>
        </div>
        <br />
        <div class="mb-3 text-bg-danger" asp-validation-summary="All">

        </div>
    </form>
</div>
@section script {
    <script>
        

        function confirmAndSubmit() {
            
            // Şube değeri değişmişse, onay kutusunu göster
            return confirm('Sınıfları birleştirmek, öğrencilerin geçmiş dönemlere ait verileri etkilemez fakat aktif dönem içerisinde öğrencilere ait Not, Devamsızlık, Ders Programı bilgilerinin silinmesine neden olabilir. Değişiklikleri kaydetmek istediğinize emin misiniz?');
        }
    </script>
}