@model AppTeacherCreateModel
@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <form asp-action="CreateTeacher" asp-controller="User" method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label>İsim :</label>
            <input asp-for="FirstName" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyisim :</label>
            <input asp-for="SecondName" type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Mail Adresi :</label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Ünvan :</label>
            <input asp-for="DepartReason" type="text" placeholder="Ör: Prof. Dr."  style="opacity: 0.8;" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numarası :</label>
            <input asp-for="PhoneNumber" type="tel" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Görsel :</label>
            <input type="file" asp-for="ImagePath" class="form-control" />
        </div>


        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Oluştur</button>
        </div>
        <div class="mb-3 text-bg-danger" asp-validation-summary="All">

        </div>
    </form>
</div>
