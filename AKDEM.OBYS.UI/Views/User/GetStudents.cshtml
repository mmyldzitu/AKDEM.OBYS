@model List<AppStudentListDto>
@{
    Layout = "_Layout";
    int count = 0;
}
<div class="container-fluid">
    <div class="text-end">
        <h1>ÖĞRENCİLER</h1>
    </div>
    <div class="text-end my5-3 p-1">
        <a asp-action="CreateStudent" asp-controller="User" class="mt-2 btn btn-success ">Yeni Öğrenci  Ekle</a>

    </div>
    <table class="mt-3 table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Email</th>
                <th>Telefon Numarası</th>
                <th>Görsel</th>
                <th>Sınıf</th>
                <th>Şube</th>



                <th>Güncelle</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count = count + 1;
                <tr>
                    <td>@count</td>
                    <td>@item.FirstName</td>
                    <td>@item.SecondName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td><img src="@item.ImagePath" height="150" width="150" /></td>
                    <td>@item.AppBranch.AppClass.Definition</td>
                    <td>@item.AppBranch.Definition</td>
                    
                    



                </tr>
            }
        </tbody>

    </table>

</div>

