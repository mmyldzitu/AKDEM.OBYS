@model List<AppTeacherListDto>
@{
    Layout = "_Layout";
    int count = 0;
}
<div class="container-fluid">
    <div class="text-end">
        <h1>ÖĞRETMENLER</h1>
    </div>
    <div class="text-end my5-3 p-1">
        <a asp-action="CreateTeacher" asp-controller="User" class="mt-2 btn btn-success ">Yeni öğretmen  Ekle</a>

    </div>
    <table class="mt-3 table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Email</th>
                <th>Telefon Numarası</th>
                <th>Görsel</th>



                <th>Güncelle</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count = count + 1;
                <tr>
                    <td>@count</td>
                    <td>@item.FirstName</td>


                    <td>@item.SecondName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td><img src="@item.ImagePath" height="150" width="150" /></td>
                    <td><a href="#" class="btn btn-primary">Güncelle</a></td>
                    <td>
                        <a class="btn btn-danger" asp-action="RemoveTeacher" asp-controller="User" asp-route-id="@item.Id" >Sil</a>

                    </td>



                </tr>
            }
        </tbody>

    </table>

</div>

