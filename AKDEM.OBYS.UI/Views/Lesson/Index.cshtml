@model List<AppLessonListDto>
@{
    Layout = "_Layout";
}

<div class="mt-2">
    <h1>DERSLER</h1>
</div>
<table class="mt-3 table table-sm table-hover">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Öğretmen</th>
            <th>Güncelle</th>
            <th>Sil</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>



               <td>@item.Definition</td>
                <td>@item.AppUser.FirstName @item.AppUser.SecondName</td>
                <td><a class="btn btn-primary" asp-action="UpdateLesson" asp-controller="Lesson" asp-route-id="@item.Id">Güncelle</a></td>
                <td><a class="btn btn-danger" asp-action="RemoveLesson" asp-controller="Lesson" asp-route-id="@item.Id">Sil</a></td>

              
            </tr>
        }
    </tbody>

</table>
<a asp-action="CreateLesson" asp-controller="Lesson" class="mt-2 btn btn-success">Yeni Ders  Ekle</a>
