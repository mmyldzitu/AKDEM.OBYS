@model List<GraduatedStudentsModel>
@{
    Layout = "_Layout";
    int count = 0;
}
<div class="container-fluid">
    <div class="text-right">
        <a id="pdfButton" class="btn btn-success" asp-action="GenerateAndDownloadPdf" asp-controller="Session" asp-route-myFileName="@($"{ViewBag.sessionName2} DÖNEMİ MEZUNLARI")" asp-route-sessionId="@ViewBag.sessionId">PDF</a>
    </div>
    <div class="text-end">
        <h1> DÖNEM MEZUNLARI (@ViewBag.sessionName)</h1>
    </div>
    <hr />
    <br />
    @{if (Model.Count == 0)
        {
            <h4>BU DÖNEM MEZUN VERİLMEMİŞTİR</h4>
        }
        else
        {

            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>İsim</th>

                        <th>Sıra No</th>
                        <th>Mezun Olduğu Sınıf</th>
                        <th>Mezuniyet Dönemi</th>
                        <th>Mezuniyet Ortalaması</th>

                        <th>Mezuniyet Derecesi(Genel)</th>

                        <th>Mezuniyet Derecesi(Şube)</th>





                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count = count + 1;
                        <tr>
                            <td>@count</td>
                            <td> @item.Name</td>

                            <td>@item.SıraNo</td>
                            <td>@item.Branch</td>
                            <td>@item.GradDate</td>
                            <td>@String.Format("{0:0.00}", @item.Average)</td>

                            <td>@item.BranchDegree</td>

                            <td>@item.ClassDegree</td>


                        </tr>
                    }
                </tbody>

            </table>

        }
    }



</div>

