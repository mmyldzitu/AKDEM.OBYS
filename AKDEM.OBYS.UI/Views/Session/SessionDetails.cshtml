
@{
    Layout = "_Layout";
}
<div class="container-fluid">

    <div class="mt-2">
        <h1>  DÖNEME DAİR İŞLEMLER (@ViewBag.sessionName)</h1>
    </div>
    <div class="text-right">
        @{ if (ViewBag.sessionStatus2)
            {
                
                    <button type="button" class="btn btn-outline-dark" id="myForm" onclick="confirmAndSubmit()" >DÖNEM SONU</button>

              
                
            }
        }
        
            <button type="button" class="btn btn-outline-danger" id="removeSession" onclick="confirmAndSubmitRemove()" >DÖNEMi SİL</button>

        
    </div>
   
    <hr />
    <table class="mt-3 table table-sm table-hover">
        <thead>
            <tr>
                <th>İşlem</th>
                <th>Açıklama</th>


            </tr>
        </thead>
        <tbody>

            <tr>
                <td bgcolor="Cadetblue"><a asp-action="SessionCriteria" asp-controller="Session" asp-route-sessionId="@ViewBag.id">DÖNEM YÖNETMELİĞİ</a></td>
                <td><strong>DÖNEM BAŞARI VE DEVAMSIZLIK KRİTERLERİ</strong></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            <tr>
                <td bgcolor="Cadetblue"><a asp-action="Index" asp-controller="Schedule" asp-route-id="@ViewBag.id">DERS PROGRAMLARI</a></td>
                <td><strong>DÖNEME DAİR DERS PROGRAMI İŞLEMLERİ</strong></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td bgcolor="Cadetblue"><a asp-action="Index" asp-controller="Otomation" asp-route-sessionId="@ViewBag.id">ÖĞRENCİ/OTOMASYON İŞLEMLERİ</a></td>
                <td><strong>DÖNEME DAİR ÖĞRENCİ İŞLEMLERİ/KARNELER</strong></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td bgcolor="Cadetblue"><a asp-action="Index" asp-controller="Warning" asp-route-sessionId="@ViewBag.id">İHTAR İŞLEMLERİ/ BAŞARISIZ DURUMA DÜŞEN ÖĞRENCİLER</a></td>
                <td><strong>BAŞARISIZLIK NEDENLERİ/ DURUMLAR</strong></td>
            </tr>


            @{ if (ViewBag.sessionStatus2)
                {
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <td bgcolor="Cadetblue"> <a asp-action="MissingNotes" asp-controller="Session" asp-route-sessionId="@ViewBag.id"> HENÜZ GİRİLMEMİŞ NOTLAR</a></td>
                        <td><strong>DÖNEM SONLANDIRMADAN ÖNCE NOT KONTROLLERİ</strong></td>
                    </tr>






                } }

            @{if (ViewBag.sessionValue == 1)

                {
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td bgcolor="Cadetblue"><a asp-action="GraduatedStudents" asp-controller="Session" asp-route-sessionId="@ViewBag.id">DÖNEM MEZUNLARI</a></td>
                        <td><strong>BU DÖNEM MEZUN OLAN ÖĞRENCİLER</strong></td>
                    </tr>
                }
            }







        </tbody>

    </table>
    <br />





</div>

@section script{
    <script>
    function confirmAndSubmit() {
        if (confirm(' Dönem sonlandırma işlemi sonrasında yeni ders programı oluşturamaz, dönem kriterlerini değiştiremezsiniz. Dönem sonlandırma işlemi eğer bu dönem yaz dönemi ise öğrencileri bir üst sınıfa geçirir. Devam etmek istediğinize emin misiniz ? ')) {
            window.location.href = '/Session/SessionEnding?sessionId=' + @ViewBag.id;
        }
        }
        function confirmAndSubmitRemove() {
        if (confirm(' Dönem silme işlemi, dönem içerisinde oluşturulmuş ders programlarının, girilmiş not ve devamsızlık bilgilerin oluşturulmuş karnelerin silinmesine yol açar. Devam etmek istediğinize emin misiniz ? ')) {
            window.location.href = '/Session/RemoveSession?sessionId=' + @ViewBag.id;
        }
    }


    </script>



}
