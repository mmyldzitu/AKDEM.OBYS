@model List<AppSessionListDto>
@{
    Layout = "_Layout";
}

<div class="mt-2">
    <h1>DÖNEMLER</h1>
</div>
<table class="mt-3 table table-sm table-hover">
    <thead>
        <tr>
            <th>Dönem Adı</th>
            <th>Durumu</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Definition</td>
                <td>@(item.Status? "Aktif":"Pasif")</td>
                <td><a href="#">@(item.Status? "Pasifleştir":"Aktifleştir")</a></td>
            </tr>
        }
    </tbody>

</table>
<button href="#" class="mt-2 btn btn-primary">Yeni Dönem Ekle</button>
